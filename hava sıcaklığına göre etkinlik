//Sıcaklık 5'dan küçük ise "Kayak" yapmayı öner.
	//Sıcaklık 5 ve 15 arasında ise "Sinema" etkinliğini öner.
	//Sıcaklık 15 ve 25 arasında ise "Piknik" etkinliğini öner.
	//Sıcaklık 25'ten büyük ise "Yüzme" etkinliğini öner. 
//if-else ile de yapılabilir.
package projelerpatika;

import java.util.Scanner;

public class sıcaklık {

	public static void main(String[] args) {
		int select ;
		Scanner scanner=new Scanner(System.in);
		System.out.println("1-sıcaklık<5\n2-5<sıcaklık<15\n3-15<sıcaklık<25\n4-sıcaklık>25");
		System.out.println("Sıcaklık aralığını belirten durumu seçiniz: ");
		select=scanner.nextInt();
		switch (select) {
		case 1:
			System.out.println("Kayak yapmaya ne dersiniz?");
			break;
			case 2:
				System.out.println("Sinemaya gitmeye ne dersiniz?");
		break;
			case 3:
				System.out.println("Piknik yapmaya ne dersiniz?");
			break;
			case 4:
				System.out.println("Yüzmeye gitmeye ne dersiniz?");
				break;
		}
	}

}
