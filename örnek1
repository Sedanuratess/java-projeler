package projelerpatika;
import java.util.Scanner;

public class ornek1 {
    public static void main(String[] args) {
        int sayi,toplam=0;
        Scanner input = new Scanner(System.in);
        do {
            System.out.print("SayÄ± gir: ");
            sayi = input.nextInt();

            if (sayi % 4 == 0){
                toplam += sayi;
            }

        } while (sayi % 2 == 0);
        System.out.println("Sonuc: " + toplam);
    }
}
